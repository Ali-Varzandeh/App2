<!DOCTYPE html>

<html>
  <%- include('includes/head'); -%>
  <body>
    <%- include('includes/header'); -%> <%- include('includes/navbar'); -%> <%#
    for each product in products display the product's propertis. %>
    <section>
      <div><h2>Shopping bag</h2></div>

      <form action="/order" method="post">
        <div>
          <label for="shipping_date"></label>
          <input
            id="shipping_date"
            type="datetime-local"
            name="shipping_date"
            value="2021-02-01T19:30"
          />
        </div>
        <button type="submit">Place an order</button>
      </form>

      <% basket.forEach((product) => { %>

      <article>
        <div>name: <%- product.NAME %></div>
        <div><h3>BRAND: <%- product.BRAND_NAME %></h3></div>

        <div>SIZE: <%- product.SIZE %></div>
        <div>COLOUR: <%- product.COLOUR %></div>
        <div>QUANTITY : <%- product.QUANTITY %></div>
        <div>DESCRIPTION: <%- product.PRO_DESCRIPTION %></div>

        <form
          action="/product/delete/<%- product.PRODUCTS_BASKETS_ID %>"
          method="POST"
        >
          <button type="submit">Delete</button>
        </form>
      </article>
      <% });%>
    </section>

    <%- include('includes/script'); -%>
  </body>
</html>
